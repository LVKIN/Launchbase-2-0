{% extends "layout.njk"%}

{% block head %}
    <title>
      Contents
    </title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="wrapper">
      <h1 style="color: #50fa7b;">Contents</h1>
    </div>

    
    <section class="cards">
{%for item in items %}      
      <div class="card" id="{{item.id}}">
        <div class="card__image-content">
          <img src="https://skylab.rocketseat.com.br/static/{{item.img}}.svg" alt="starter">
        </div>
        <div class="card__content">
          <p>{{item.title}}</p>
        </div>
        <div class="card__info">
          <p class="card__modules">{{item.module}}</p>
          <p class="card__cost">{{item.price}}</p>
        </div>
      </div>
{%endfor%}
      
    </section>
    <div class="modal-overlay active">
      <div class="modal">
        <a class="modal-close">
          <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
          <iframe src="" frameborder="0"></iframe>
        </div>
      </div>
    </div>
    <script src="scripts.js"></script>
{% endblock  %}