{% extends "layout.njk" %}

{% block body %}
<form class="card" method="POST" action="/instructors">
  <section class="avatar" 
  style="width 100%; height: 100%; background: url(https://source.unsplash.com/collection/3465564/500x500) no-repeat center center / cover">

  </section>
  <section class="details">
    <h3>Novo Instrutor</h3>

    <div class="item">
      <div>Avatar</div>
      <div>
        <input 
          type="url"
          name="avatar_url"
          placeholder="http://"
        >
      </div>
    </div>

    <div class="item">
      <div>Instrutor</div>
      <div>
        <input 
          type="text"
          name="name"
          placeholder="Nome do Instrutor"
        >
      </div>
    </div>

    <div class="item">
      <div>Data de Nascimento</div>
      <div>
        <input 
          type="date"
          name="birth"
          placeholder="DD/MM/AAAA"
        >
      </div>
    </div>

    <div class="item">
      <div>Sexo</div>
      <div>
        <span>
          <input type="radio" name="gender" value="M" cheked>Masculino
        </span>
        <span>
          <input type="radio" name="gender" value="F" cheked>Feminino
        </span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input 
          type="text"
          name="services"
          placeholder="Separe os serviços por vírgula"
        >
      </div>
    </div>

    <button type="submit">Concluir</button>

  </section>
</form>
{% endblock body %}