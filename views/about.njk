{% extends "layout.njk" %}


{% block head %}
<title>About Me</title>
{% endblock %}

{% block content %}
<div id="wrapper">
  <img src="{{item.avatar_link}}" alt="avatar">
  <h1><a href="https://github.com/LVKIN" target="_blank">{{item.name}}</a></h1>
  <h2>{{item.role}}</h2>
  <p>{{item.description}}</p>
</div>

<div id="social-network" class="links">
  {% for link in item.links %}
  <a href="{{link.url}}" target="_blank">{{link.name}}</a>
  {% endfor %}
</div>

{% endblock %}