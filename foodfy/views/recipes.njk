{% extends "layout.njk" %}

{% block body %}
  <div class="cards">
    {% for item in items %}
      
        <div class="card__recipe" id="{{item.id}}">
            <div class="card__image-container">
              <img src="{{item.image}}" alt="{{item.title}}">
            </div>
            <div class="card__content">
              <div class="card__title">
                <h4>{{item.title}}</h4>
              </div>
              <div class="card__author">
                <p>por {{item.author}}</p>
              </div>
            </div>
        </div>
      
    {% endfor %}
    
    
  </div>
  
{% endblock %}